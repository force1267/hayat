{
  "connection": "default",
  "collectionName": "posts",
  "info": {
    "name": "post",
    "description": "Blog posts"
  },
  "options": {
    "increments": true,
    "timestamps": [
      "created_at",
      "updated_at"
    ],
    "comment": ""
  },
  "attributes": {
    "title": {
      "required": true,
      "type": "string"
    },
    "content": {
      "required": true,
      "type": "richtext"
    },
    "cover": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": true
    },
    "like": {
      "type": "integer",
      "default": "0"
    }
  }
}